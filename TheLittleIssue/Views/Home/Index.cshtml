@{
    ViewBag.Title = "The Little Issue";
}

<div class="row">
    <!-- Card 1: Educational Activities -->
    <div class="col-md-4">
        <div class="card p-3 text-center" style="background-color: #FFA07A; border-radius: 20px;">
            <div class="card-body">
                <h5 class="card-title">Educational Activities</h5>
                <p class="card-text">Explore various activities to enhance your learning.</p>
                <a href="#" class="btn btn-primary">Articles & Activities</a>
            </div>
        </div>
    </div>

    <!-- Card 2: Interactive Activities -->
    <div class="col-md-4">
        <div class="card p-3 text-center" style="background-color: #90EE90; border-radius: 20px;">
            <div class="card-body">
                <h5 class="card-title">Interactive Activities</h5>
                <p class="card-text">Interactive content to engage and learn.</p>
                <a href="#" class="btn btn-primary">Articles & Activities</a>
            </div>
        </div>
    </div>

    <!-- Card 3: Interactive Resources -->
    <div class="col-md-4">
        <div class="card p-3 text-center" style="background-color: #ADD8E6; border-radius: 20px;">
            <div class="card-body">
                <h5 class="card-title">Interactive Resources</h5>
                <p class="card-text">Find resources to further your knowledge.</p>
                <a href="#" class="btn btn-primary">Interactive Resources</a>
            </div>
        </div>
    </div>
</div>

<!-- Articles Section -->
<div class="row mt-4">
    <div class="col-12 text-center">
        <button class="btn btn-success" style="border-radius: 20px; padding: 10px 40px;">Articles</button>
    </div>
</div>

<!-- Resource Section -->
<div class="row mt-4">
    <div class="col-12 text-center">
        <div class="card p-3" style="background-color: #FFFFE0; border-radius: 20px;">
            <div class="card-body">
                <h5 class="card-title">Resources</h5>
                <p class="card-text">Browse educational materials to expand your knowledge.</p>
                <a href="#" class="btn btn-primary">Resources</a>
            </div>
        </div>
    </div>
</div>
