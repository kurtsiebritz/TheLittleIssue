 @model IEnumerable<TheLittleIssue.Models.IssueModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Articles</title>
    <style>
        /* Body Styling */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url('../images/background2.jpg'); /* Path to your background image */
            background-size: cover; /* Cover the entire area */
            background-position: center; /* Center the image */
            background-repeat: no-repeat; /* Do not repeat the image */
            height: 100vh;
            color: #333;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        /* Header Styling */
        header {
            background-color: rgba(135, 206, 235, 0.9); /* Sky blue with slight transparency */
            width: 100%;
            text-align: center;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            position: relative;
            border-radius: 15px; /* Rounded corners */
            color: white; /* Set text color to white */
        }

        main {
            overflow-y: auto;
        }

        /* Articles Container */
        .articles-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 20px;
            z-index: 1; /* Ensure cards are above background */
            color: white; /* Set text color to white for all child elements */
        }


        /* Card Styling */
        .card {
            background: linear-gradient(to bottom, #ffffff, #f0f0f0); /* Base color */
            border-radius: 15px;
            margin: 15px;
            padding: 20px;
            width: 250px;
            height: 200px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.4); /* Aggressive shadow for depth */
            transition: transform 0.3s, box-shadow 0.3s;
            position: relative;
            overflow: hidden;
            text-align: center;
        }

            .card img {
                width: 100%;
                height: 100%;
                object-fit: contain; /* Ensures image covers the entire card without distortion */
                position: absolute;
                top: 0;
                left: 0;
                z-index: 1;
            }
            /* Card Hover Effects */
            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 30px rgba(0, 0, 0, 0.5); /* Stronger shadow on hover */
                cursor: pointer;
            }

            /* Card Titles */
            .card h2 {
                position: relative;
                z-index: 2; /* Ensures title is on top of the image */
                color: black;
                font-size: 1.2em;
                background: rgba(135, 206, 235, 0.9); /* Semi-transparent background for readability */
                padding: 5px 10px;
                border-radius: 8px;
                display: inline-block;
                margin-top: 5px;
            }

            /* Card Paragraphs */
            .card p {
                color: #ffffff; /* Text color for better readability */
                font-size: 0.9em;
            }

            /* Specific Colors for Each Card */
            .card:nth-child(1) {
                background-color: #FF9999; /* Lighter Red */
                background: radial-gradient(circle, #FF9999 30%, #FF7373 70%);
            }

            .card:nth-child(2) {
                background-color: #FFE58B; /* Lighter Yellow */
                background: radial-gradient(circle, #FFE58B 30%, #FFD54F 70%);
            }

            .card:nth-child(3) {
                background-color: #A8E6CE; /* Lighter Green */
                background: radial-gradient(circle, #A8E6CE 30%, #7DDFB9 70%);
            }

            .card:nth-child(4) {
                background-color: #8CCBEB; /* Lighter Blue */
                background: radial-gradient(circle, #8CCBEB 30%, #67A2B8 70%);
            }

            .card:nth-child(5) {
                background-color: #FFB3B3; /* Lighter Dark Red */
                background: radial-gradient(circle, #FFB3B3 30%, #FF8C8C 70%);
            }

            .card:nth-child(6) {
                background-color: #FFB2C1; /* Lighter Pink */
                background: radial-gradient(circle, #FFB2C1 30%, #FF8DAA 70%);
            }
    </style>
</head>
<body>
    <header>
        <h1>Articles</h1>
    </header>
    <main class="articles-container">
        @foreach (var article in Model)
        {
            <div class="card" onclick="openArticlePage('@article.Title')">
                <img src="@article.CoverUrl" alt="@article.Title" />
                <h2>@article.Title</h2>
            </div>
        }
    </main>

    <script>
        function openArticlePage(title) {
            // Encode the title to safely include it in the URL
            const encodedTitle = encodeURIComponent(title);
            // Navigate to the new page with the title and PDF URL as query parameters
            window.location.href = `/home/ReadArticle?title=${encodedTitle}&page=1`;
        }
    </script>
</body>
</html>
